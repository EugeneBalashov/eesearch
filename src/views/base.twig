<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>{% block title %}Panel: {{ app.user.name }}{% endblock %}</title>
            
            <link href="http://{{ app.request.host }}/js/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
            <link href="http://{{ app.request.host }}/js/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
            <link href="http://{{ app.request.host }}/js/jquery-ui/css/smoothness/jquery-ui-1.10.1.custom.min.css" rel="stylesheet" media="screen">
            <link href="http://{{ app.request.host }}/css/style.css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid" id="main">
            {% block container %}
            
            <div class="row-fluid">
                <div class="span12" id="header">
                {% block header %}
                    <div class="navbar">
                        <div class="navbar-inner">
                            <i><a class="brand" href="{{ path('main') }}">{{ app.user.name }}</a></i>
                            <ul class="nav pull-right">
                                <li>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <a href="{{ path('logout') }}">Logout</a>
                                {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endblock %}
                </div>
            </div>
                
            <div class="row-fluid">
                <div id="left-menu" class="span2">
                    <ul class="nav nav-tabs nav-stacked">
                    {% block left_menu %}
                        {% include 'leftMenu.twig' %}
                    {% endblock%}
                    </ul>
                </div>
                <div id="panel" class="span10">
                    <div class="panel-wraper" class="span9">
                    {% block panel %}{% endblock %}
                    </div>
                </div>
            </div>
                
            <div class="row-fluid">
                <div id="footer" class="span12">
                {% block footer %}
                    <hr/>
                    <p><center><b>Â© Dev 2013</b></center></p>
                {% endblock %}
                </div>
            </div>
                
            {% endblock container %}
        </div>
            
        <script src="http://{{ app.request.host }}/js/jquery-1.9.1.min.js"></script>
        <script src="http://{{ app.request.host }}/js/jquery-ui/js/jquery-ui-1.10.1.custom.min.js"></script>
        <script src="http://{{ app.request.host }}/js/bootstrap/js/bootstrap.min.js"></script>
        {% block scripts %}{% endblock %}
    </body>
</html>